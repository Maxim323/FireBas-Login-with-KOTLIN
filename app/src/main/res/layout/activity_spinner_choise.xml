<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".SpinnerChoise">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="334dp"
            android:layout_height="182dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10dp"
            android:padding="9dp"
          />


        <ProgressBar
            android:indeterminateOnly="true"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <Button
            android:id="@+id/select_image"
            android:layout_width="169dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/button_style"
            android:text="Select profile image" />


        <EditText
            android:id="@+id/edit_text_nume_prenume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="15dp"
            android:hint="Nume si prenume"
            android:inputType="text"
            android:padding="15dp" />

        <AutoCompleteTextView
            android:id="@+id/facultate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:completionThreshold="1"
            android:hint="Selecteaza facultatea"
            android:padding="15dp" />

        <AutoCompleteTextView
            android:id="@+id/specializare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:completionThreshold="1"
            android:hint="Selecteaza specializare"
            android:padding="15dp" />

        <AutoCompleteTextView
            android:id="@+id/an"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:completionThreshold="1"
            android:hint="Selecteaza anul"
            android:padding="15dp" />

        <AutoCompleteTextView
            android:id="@+id/grupa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:completionThreshold="1"
            android:hint="Selecteaza grupa"
            android:padding="15dp" />


        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Finalizare register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</ScrollView>